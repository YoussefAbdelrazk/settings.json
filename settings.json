{
  // === Editor Settings ===
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "boundary",
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": false,
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.fontFamily": "FiraCode Nerd Font, JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.lineHeight": 1.6,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.snippetSuggestions": "inline",
  "editor.wordWrapColumn": 80,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.renderLineHighlight": "line",
  "editor.occurrencesHighlight": "multiFile",
  "editor.selectionHighlight": true,
  "editor.stickyScroll.enabled": false,
  "editor.hover.delay": 500,
  "editor.mouseWheelZoom": true,

  // === File Handling ===
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.autoSave": "onFocusChange",
  "files.associations": {
    ".php_cs": "php",
    ".php_cs.dist": "php"
  },

  // === Prettier ===
  "prettier.useEditorConfig": true,
  "prettier.requireConfig": false,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,
  "prettier.trailingComma": "all",
  "prettier.arrowParens": "avoid",
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.endOfLine": "auto",
  "prettier.jsxSingleQuote": true,

  // === Language Formatting ===
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[tailwindcss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // === Emmet ===
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "vue": "html",
    "react": "html",
    "javascript": "html",
    "typescript": "html",
    "markdown": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,

  // === Terminal ===
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Pwsh7",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.windows": {
    "Pwsh7": {
      "path": "C:\\Program Files\\WinGet\\Packages\\Microsoft.PowerShell_Microsoft.Winget.Source_8wekyb3d8bbwe\\pwsh.exe",
      "icon": "terminal-powershell"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },

  // === Git & SCM ===
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.decorations.enabled": true,

  // === Workspace ===
  "workbench.colorTheme": "Palenight Theme",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,
  "workbench.tree.indent": 15,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,

  // === Search & Explorer ===
  "search.useIgnoreFiles": true,
  "explorer.confirmDelete": false,
  "explorer.sortOrder": "default",

  // === IntelliSense ===
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.suggest.showFunctions": true,
  "editor.suggest.showClasses": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showModules": true,

  // === TypeScript & JS ===
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",

  // === ESLint ===
  "eslint.enable": true,
  "eslint.packageManager": "npm",
  "eslint.run": "onSave",
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],

  // === Path Intellisense ===
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src"
  },

  // === Theme + Extras ===
  "material-icon-theme.saturation": 1,
  "material-icon-theme.files.color": "#42a5f5",
  "material-icon-theme.folders.theme": "specific",

  // === Optional Tools ===
  "cSpell.userWords": ["apikey", "mohannad", "Ragab"],
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly", "eslint"]
}
